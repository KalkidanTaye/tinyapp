<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(email){ %>
    <div class="form-group mb-2 form-inline">
      <label>Logged in as <%= email.email %></label>

      <form class="form-inline" method="POST" action="/logout">
        <button type="submit" class="form-control mx-sm-3 btn btn-outline-dark">
          Logout
        </button>
      </form>
    </div>
    <% } else { %>
    <form class="form-inline" method="POST" action="/login">
      <div class="form-group mx-sm-3 mb-2">
        <label for="staticEmail2" class="sr-only">Username</label>
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="Username"
        />
      </div>
      <button type="submit" class="btn btn-outline-dark">Login</button>
    </form>
    <% } %>
  </nav>
</header>
